<Window x:Class="SPFA.EventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EventWindow" Height="150" Width="300" Foreground="White">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF8EC9F7" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBlock Height="Auto" Width="Auto" Margin="0,15,0,0"  TextWrapping="Wrap" Text="Enter event name or info" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <TextBox Name="Infobox" Height="20" Width="150" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,0" TextWrapping="Wrap" Text="Enter here" GotFocus="Infobox_GotFocus" />
        <Button Name="info_Button" Height="20" Width="50" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,80, 0, 0" Content="Okay" Click="info_Button_Click"/>
    </Grid>
</Window>
